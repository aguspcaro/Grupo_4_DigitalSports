<%- include("partials/head")  %>
    <link rel="stylesheet" href= "/stylesheet/detail-producto.css">
</head>

<body>
    <main class="main">
        <%- include("partials/header")  %>
        
            <section class="container-section-producto">


                <div class="container-img">
                    <img class="article-imagen-left" src="/images/products/<%=product.image%>">
                </div>

                <div class="container-detalle">

                    <div class="container-detalle-titulo">
                        <div class="container-texto-nombre">
                            <h3><%= product.name %></h3>
                        </div>
                        <div class="container-texto-precio">
                            <h2><strong>$<%= product.precio %></strong></h2>
                            <h4>pagando en efectivo $<%= product.promocional %></h4>
                        </div>
                    </div>

                    <div class="container-detalle-caracteristicas">


                        <div>
                            <p><label>Talle</label></p>
                        </div>
                        
                        <div class="container-detalle-talles-numero">
                            
                            <label ><%= product.talle %></label>
                        
                        </div>

                        <div class="container-detalle-color">
                            <p>Stock</p>
                            <label class="colores" for=""><%= product.stock %></label>
                        </div>

                        <div class="container-detalle-envio">
                            <p>Envío:</p>
                            <label ><%= product.envio %></label>
                        </div>
                        
                    </div>
                </div>

            </section>

            <div class="container-detalle-comprar">
                <button type="submit" class="section-loginButtonEnterOk"><a href=""><i class="fas fa-shopping-cart carrito"></i></a></button>
                <div class="logo-like">
                    <p>
                        <a href=""><i class="fas fa-heart like"></i></a>
                    </p>
                    
                </div>
                
                
            </div>

            <div class="container-descripcion">
                <hr>
                <h3>Descripción</h3>
                
                <p><%= product.description%></p>
                <hr>
            </div>
   
        <%- include("partials/form-suscribe")  %>


        <%- include("partials/footer")  %>
    </main>
</body>
</html>