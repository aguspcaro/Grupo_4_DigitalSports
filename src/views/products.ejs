<%- include("partials/head")  %>

<link rel="stylesheet" href="/stylesheet/style-home.css">

</head>

<body>
    <main class="main">

        <%- include("partials/header")  %>


        <h1>Todos los productos</h1>

              

               
                
                 
               
                    <section class="offer-article">
                   
                        <% products.forEach(function (product){ %>
                   
                        <article class="offer-article1">
                            <a href="/detail"><img src="/images/products/Converse-chuck-Taylor.jpeg"
                                    class="offer-article1-image"></a>
                            <div class="offer-article-info">
                                <p class="offer-article-title"><%= product.name%></p>
                                <div class="offer-article-container-description">
                                    <p class="offer-article-description">$<%= product.precio%></p>
                                    <span class="offer-article-description-span">$<%= product.descuento%></span>
                                </div>
                            </div>
                        </article>
                       
                     <%})%>
                    </section>
       
                    <%- include("partials/footer")  %>
       
                </main>


</body>

</html>